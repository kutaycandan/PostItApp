<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/background_login_signup">

    <TextView
        android:id="@+id/group_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/group_text"
        android:textSize="30dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/input_register"
        android:layout_marginLeft="10dp"/>


    <ImageButton
        android:layout_marginTop="5dp"
        android:id="@+id/join_group_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@mipmap/join"
        android:layout_alignParentRight="true"
        />
    <ImageButton
        android:layout_marginTop="5dp"
        android:id="@+id/add_group_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@mipmap/group_add"
        android:layout_toLeftOf="@+id/join_group_button"
        android:layout_marginRight="10dp"
        />


    <ListView
        android:id="@+id/group_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/group_textView"
        android:layout_marginTop="10dp"
        >


    </ListView>




</RelativeLayout>